{
  "name": "gikopoipoi",
  "version": "0.0.1",
  "description": "Gikopoipoi",
  "license": "Beerware",
  "type": "module",
  "engines": {
    "node": "24.x"
  },
  "scripts": {
    "dev-frontend": "vite --host",
    "dev-backend": "nodemon src/backend/main.ts -w src/backend -w public/characters -e ts,svg",
    "start": "cross-env NODE_ENV=production node build/backend/main.js",
    "start-with-socket-debug": "cross-env NODE_ENV=production DEBUG=engine,socket.io*,-socket.io-parser node build/backend/main.js",
    "build": "vite build && npx tsc --listEmittedFiles --project tsconfig.server.json",
    "start-persistor": "cross-env PERSISTOR_SECRET=hello node state-persistor.js",
    "deploy-prod": "git push origin master:CI-PROD",
    "deploy-test": "git push origin HEAD:CI-TEST -f",
    "optimize-svgs": "node optimize-svgs.js",
    "build-docker": "docker build -t gikopoipoi .",
    "run-docker": "docker run -ti -p 8085:8085 gikopoipoi",
    "tsw": "vue-tsc --watch"
  },
  "dependencies": {
    "2ch-trip": "^4.0.0",
    "@vitejs/plugin-vue": "^6.0.4",
    "chess.js": "^1.4.0",
    "compression": "^1.8.1",
    "cookie-parser": "^1.4.7",
    "cross-env": "^10.1.0",
    "dayjs": "^1.11.19",
    "express": "^5.2.1",
    "express-sslify": "^1.2.0",
    "got": "^14.6.6",
    "i18next": "^25.8.7",
    "i18next-vue": "^5.4.0",
    "janus-videoroom-client": "https://github.com/iccanobif/janus-client.git",
    "jquery": "^4.0.0",
    "jquery-ui": "^1.14.0",
    "jquery-ui-touch-punch": "^0.2.3",
    "lodash": "^4.17.23",
    "loglevel": "^1.9.2",
    "socket.io": "^4.8.3",
    "socket.io-client": "^4.8.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "uuid": "^13.0.0",
    "vite-plugin-json5": "^1.2.0",
    "vue": "^3.5.28",
    "webrtc-codec-support": "^1.0.1"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@types/compression": "^1.8.1",
    "@types/cookie-parser": "^1.4.10",
    "@types/express": "^5.0.6",
    "@types/express-sslify": "^1.2.5",
    "@types/jquery": "^3.5.33",
    "@types/jqueryui": "^1.12.24",
    "@types/lodash": "^4.17.23",
    "@types/node": "^25.2.3",
    "@types/ws": "^8.18.1",
    "eslint": "^10.0.0",
    "globals": "^17.3.0",
    "jszip": "^3.10.0",
    "nodemon": "^3.1.11",
    "svgo": "^4.0.0",
    "tsx": "^4.21.0",
    "vite": "^7.3.1",
    "vue-tsc": "^3.2.4"
  }
}
